<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.rose_hulman.zhiqiangqiu.rosecoffee.fragment.AccountInformationFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:text="I am delivering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orderID="@+orderID/is_delivering_index_textview"
            android:textSize="18sp" />

        <Switch
            android:text="Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orderID="@+orderID/is_delivering_switch"
            android:layout_alignTop="@+orderID/is_delivering_index_textview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@orderID/is_delivering_index_textview"
            android:layout_marginTop="40dp"
            android:background="@color/grey" />



        <ImageButton
            android:layout_height="120dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:orderID="@+orderID/profile_photo_imagebutton"
            android:layout_marginTop="50dp"
            android:layout_alignTop="@orderID/is_delivering_index_textview"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Profile Photo"
            android:orderID="@+orderID/change_profile_image_textview"
            android:layout_below="@+orderID/profile_photo_imagebutton"
            android:textColor="@color/linkBlue"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Name:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orderID="@+orderID/name_index_textview"
            android:layout_below="@+orderID/change_profile_image_textview" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:layout_alignTop="@+orderID/name_index_textview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orderID="@+orderID/name_edit_imagebutton" />

        <TextView
            android:text="Zhiqiang Qiu"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+orderID/name_edit_imagebutton"
            android:layout_marginRight="50dp"
            android:orderID="@+orderID/firstname_content_textview"
            android:layout_alignTop="@+orderID/name_index_textview" />

        <TextView
            android:text="Email:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orderID="@+orderID/email_index_textview"
            android:layout_below="@+orderID/name_index_textview" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:layout_alignTop="@+orderID/email_index_textview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orderID="@+orderID/email_edit_imagebutton" />

        <TextView
            android:text="qiuz@rose-hulman.edu"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+orderID/email_edit_imagebutton"
            android:layout_marginRight="50dp"
            android:orderID="@+orderID/lastname_content_textview"
            android:layout_alignTop="@+orderID/email_index_textview" />

        <TextView
            android:text="Phone:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orderID="@+orderID/phone_number_index_textview"
            android:layout_below="@+orderID/email_index_textview" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:layout_alignTop="@+orderID/phone_number_index_textview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orderID="@+orderID/phone_number_edit_imagebutton" />

        <TextView
            android:text="None"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+orderID/phone_number_edit_imagebutton"
            android:layout_marginRight="50dp"
            android:orderID="@+orderID/phone_number_content_textview"
            android:layout_alignTop="@+orderID/phone_number_index_textview" />



    </RelativeLayout>

</FrameLayout>
