<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.rose_hulman.zhiqiangqiu.rosecoffee.fragment.LocationAndTimeFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/add_drink_name_image"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/cus_main_building_img"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/location_text_view"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/add_drink_name_image"
                android:text="@string/building_name"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:hint="@string/cus_main_building_hint"
                android:clickable="true"
                />

        </RelativeLayout>


        <TimePicker
            android:id="@+id/cus_main_time_picker"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp" />
    </LinearLayout>
</ScrollView>