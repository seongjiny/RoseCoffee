<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="18sp"
            android:text="Order: "
            android:id="@+id/delivery_main_order_brief_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:text="unknown"
            android:layout_alignTop="@+id/delivery_main_order_brief_title"
            android:layout_toRightOf="@+id/delivery_main_order_brief_title"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/delivery_main_order_brief" />

        <TextView
            android:text="Location: "
            android:layout_below="@+id/delivery_main_order_brief_title"
            android:layout_alignStart="@+id/delivery_main_order_brief_title"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delivery_main_order_location_title"
            android:textStyle="bold" />

        <TextView
            android:layout_alignTop="@+id/delivery_main_order_location_title"
            android:layout_toRightOf="@+id/delivery_main_order_location_title"
            android:text="unknown"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delivery_main_order_location" />

        <TextView
            android:text="Time: "
            android:layout_below="@+id/delivery_main_order_location_title"
            android:layout_alignStart="@+id/delivery_main_order_location_title"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:id="@+id/delivery_main_order_time_title"
            android:textStyle="bold" />

        <TextView
            android:text="unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignTop="@+id/delivery_main_order_time_title"
            android:layout_toRightOf="@+id/delivery_main_order_time_title"
            android:id="@+id/delivery_main_order_time" />
    </RelativeLayout>

</android.support.v7.widget.CardView>